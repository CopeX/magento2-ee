{
  "name": "wirecard/magento2-ee",
  "description": "Magento2 plugin for Elastic Engine",
  "license": "GPL-3.0",
  "minimum-stability": "beta",
  "require": {
    "php": ">=5.6",
    "magento/community-edition": "2.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7"
  },
  "type": "magento2-module",
  "scripts": {
    "test": "phpunit --colors=always",
    "debugEnvVar": "php debugEnvVar.php"
  },
  "autoload": {
    "psr-4": {
      "Wirecard\\ElasticEngine\\": "src"
    },
    "files": [
      "registration.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "WirecardTest\\ElasticEngine\\": "test"
    }
  }
}
